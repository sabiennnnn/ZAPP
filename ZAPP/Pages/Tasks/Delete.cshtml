@page
@model ZAPP.Pages.Tasks.DeleteModel

@{
    ViewData["Title"] = "Verwijderen";
}

<h1>Verwijderen</h1>

<h3>Weet je zeker dat je deze taak wilt verwijderen?</h3>
<div>
    <h4>Taak</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Task.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Task.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Task.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Task.Description)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Task.TaskID" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" /> |
        <a asp-page="./Index">Terug</a>
    </form>
</div>
