@page
@model ZAPP.Pages.Visits.EditModel

@{
    ViewData["Title"] = "Aanpassen";
}

<h1>Aanpassen</h1>

<h4>Bezoek</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Visit.VisitID" />
            <div class="form-group">
                <label asp-for="Visit.CustomerID" class="control-label"></label>
                <select asp-for="Visit.CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
                <span asp-validation-for="Visit.CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visit.EmployeeID" class="control-label"></label>
                <select asp-for="Visit.EmployeeID" class="form-control" asp-items="ViewBag.EmployeeID"></select>
                <span asp-validation-for="Visit.EmployeeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visit.VisitDate" class="control-label"></label>
                <input asp-for="Visit.VisitDate" class="form-control" />
                <span asp-validation-for="Visit.VisitDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Visit.VisitDone" /> @Html.DisplayNameFor(model => model.Visit.VisitDone)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Terug</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
