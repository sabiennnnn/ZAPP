@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ZAPP Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/site.css")" media="screen" />
    <link rel="icon" href="@Url.Content("~/favicon.svg")" />

    <!-- Font Includes -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Urbanist:wght@400;700;800;900&display=swap" rel="stylesheet">
</head>
<body class="login-bg" style="background: linear-gradient( rgba(0,95,171,1) 2%, rgba(12,35,114,1) 98% ); ">
    <div class="container">
        <main role="main" class="pb-3">
            <div class="row mt-4 mb-4">
                <div class="col-md-4 centre">
                    <img src="~/img/LogoHeart.svg" style="width:100px;" alt="logo heart zapp"/>
                </div>
               
            </div>

            <div class="row justify-content-md-center mt-4">
                <div class="col-md-4 col-sm-1 text-light px-sm-4">
                    <section>
                        <form id="account" method="post">
                            <h4>Log in</h4>
                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Log in</button>
                            </div>
                            <div class="form-group">
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword">Wachtwoord vergeten?</a>
                                </p>
                                <p>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registreren</a>
                                </p>
                                <p>
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">E-mail bevestiging opnieuw verzenden</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>

            </div>

            <div class="row mt-4 mb-4 justify-content-end">
                <div class="test col-md-4">
                    <img src="~/img/LogoText.svg" style="width:180px;" />
                </div>
            </div>
        </main>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
